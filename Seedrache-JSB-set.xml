		<lighting>
			<instruments-norm type="double">0</instruments-norm>
			<instruments type="bool">true</instruments>
			<cockpit-lights type="bool" >false</cockpit-lights>
		</lighting>
		<engines>
			<engine n="0">
				<magnetos>0</magnetos>
				<master-bat>false</master-bat>
